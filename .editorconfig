root = true

[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.xml]
indent_size = 4

[*.py]
indent_size = 4

[*.java]
# https://github.com/editorconfig/editorconfig-jetbrains/issues/57#issuecomment-275606421
continuation_indent_size = 4

[*.md]
trim_trailing_whitespace = false
